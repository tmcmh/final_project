<%= link_to 'Vote now', vote_now_path %>

<h2>The voter roll</h2>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @voters.each do |voter| %>
  <tr>
    <td><%= voter.email %></td>
    <td><%= link_to 'Show', voter %></td>
    <td><%= link_to 'Edit', edit_voter_path(voter) %></td>
    <td><%= link_to 'Destroy', voter, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<h2>The Results</h2>


<table>

  <% totalvotes = @votes.count %>

<% @candidates.each do |candidate| %>
  <% votecount = @votes.count {|vote| vote.candidate_id == candidate.id } %> 

  <tr>
    <td><%= candidate.name %></td>
    <td><%= votecount %> votes</td>
    <td><%= 100 * votecount/totalvotes %> percent</td>
 </tr>

<% end %>

</table>

<p>The winning candidate is <%= @winner %></p>

